    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build and run active file",
            "command": "C:/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileBasenameNoExtension};",
                "Get-Content",
                "${workspaceFolder}/input.txt",
                "|",
                "./${fileBasenameNoExtension}",
                "del",
                "./${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "C:/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
